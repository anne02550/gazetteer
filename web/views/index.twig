    <main>	
      <h2 class="text-center my-3">Welcome to Gazetteer!</h2>
	      <div class="text-center">A mobile friendly website providing location service.</div>

   
          <button class="btn btn-outline-secondary btn-lg" id="location">Find my location!</button>
          <br>
     
              <label>or insert an address manually</label>
                <input id="find-address" type="address" placeholder="enter an address"/>
              <button class="btn btn-outline-secondary btn-lg" id="address">Search!</button>
         

        <div class="row">
          <div class="col"> 
            <div class="main-form">
            <form >
              <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="country">Country:</label>
                  <div class="col-sm-10">
                    <input class="form-control"  id="country" type="text" />
                  </div>
                </div>
              <div  class= "form-group row">
                <label class= "col-sm-2 col-form-label" for="population">Population:</label>
                  <div class= "col-sm-10">
                    <input class= "form-control"  id="population" type="text" />
                  </div>           
                </div>
              <div  class= "form-group row">
                <label class= "col-sm-2 col-form-label" for="capital">Capital:</label>
                  <div class= "col-sm-10">
                    <input class= "form-control"  id="capital" type="text" />
                  </div>
                </div>
              <div class= "form-group row">
                <label class= "col-sm-2 col-form-label" for="weather">Weather:</label>
                  <div class= "col-sm-10">
                    <input class= "form-control"  id="weather" type="text" />
                  </div>
              <div  class= "form-group row">
                <label class= "col-sm-2 col-form-label" for="currency">Currency:</label>
                  <div class= "col-sm-10">
                    <input class= "form-control"  id="currency" type="text" />
                  </div>
              </div>
              <div  class= "form-group row">
                <label class= "col-sm-2 col-form-label" for="exchange_rate">Exchange rate: $</label>
                  <div class= "col-sm-10">
                    <input class= "form-control"  id="exchange_rate" type="text"/>
                  </div>
              </div>
              <div  class= "form-group row">
                <label class= "col-sm-2 col-form-label" for="flag">Flag:</label>
                  <div class= "col-sm-10">
                    <input class= "form-control" id="flag" type="text" />
                  </div>
              </div>
            </form>
            </div>
            </div>
          <div class="col">
             <div class="map-border">
                <div id="map"></div>
             </div>
          </div>
      </div>
    </main>
